<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="600"
             x:Class="Project_SICC.Views.ContractorsPageView">

    <UserControl.Styles>
        <!-- Card style -->
        <Style Selector="Button.card">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#2D2D2D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style Selector="Button.card:pointerover /template/ Border">
            <Setter Property="Background" Value="#2A2A2A"/>
        </Style>
        <Style Selector="Button.card:pointerover">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Styles>

    <Grid Background="#121212" RowDefinitions="Auto,*,Auto" Margin="20">

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25" HorizontalAlignment="Center">
            <TextBlock Text="Contractors"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,8"
                       TextAlignment="Center"/>
            <TextBlock Text="Manage contractors, contracts, history, and related products"
                       Foreground="#cccccc"
                       FontSize="14"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- Cards in fixed 2x2 grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,50,0,0">
            <Grid HorizontalAlignment="Center"
                  ColumnSpacing="20" RowSpacing="15"
                  MaxWidth="640">  <!-- 2 cards * 300 width + spacing -->

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="160"/>
                    <RowDefinition Height="160"/>
                </Grid.RowDefinitions>

                <!-- Contractor Details -->
                <Button Classes="card"
                        Grid.Row="0" Grid.Column="0"
                        Width="300" Height="160"
                        Click="OnContractorDetailsClick">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Contractor Details"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,5"
                                   TextAlignment="Center"/>
                        <TextBlock Text="View and edit contractor info, contacts, and company data."
                                   Foreground="#aaaaaa"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Contracts History -->
                <Button Classes="card"
                        Grid.Row="0" Grid.Column="1"
                        Width="300" Height="160"
                        Click="OnContractsHistoryClick">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Contracts History"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,5"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Review past contracts, durations, and milestones."
                                   Foreground="#aaaaaa"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Contracts -->
                <Button Classes="card"
                        Grid.Row="1" Grid.Column="0"
                        Width="300" Height="160"
                        Click="OnContractsClick">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Contracts"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,5"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Browse active contracts and manage agreements."
                                   Foreground="#aaaaaa"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Products -->
                <Button Classes="card"
                        Grid.Row="1" Grid.Column="1"
                        Width="300" Height="160"
                        Click="OnProductsClick">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Products"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,5"
                                   TextAlignment="Center"/>
                        <TextBlock Text="View and manage products linked to contracts."
                                   Foreground="#aaaaaa"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>

            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#1E1E1E" Height="20"/>
    </Grid>
</UserControl>
