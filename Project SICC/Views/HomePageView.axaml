<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Project_SICC.Views.HomePageView">
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Welcome to Simple Invoicing and Customer Creator (SICC)" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Spacing="10">
            <TextBlock Text="Purpose of SICC" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" 
                       MaxWidth="600" 
                       TextAlignment="Center"
                       Text="Simple Invoicing and Customer Creator (SICC) is designed to streamline your business operations by providing an intuitive platform for creating and managing invoices, tracking customer information, and organizing your financial data efficiently."/>
            
            <!-- Version Display -->
            <TextBlock Text="Version: 1.0.0" 
                       FontSize="14" 
                       Margin="0,10,0,0" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</UserControl>